{
  "verbose": true,
  "ignore": [
    "node_modules",
    ".git",
    "logs/*",
    "logs/**/*",
    "public/*",
    "diff.txt",
    "dist"
  ],
  "watch": [
    "controllers/",
    "models/",
    "routes/",
    "utils/",
    "services/",
    "crons/",
    "middleware/",
    "server.ts"
  ],
  "ext": "js,ts,json,env",
  "exec": "ts-node ./server.ts"
}